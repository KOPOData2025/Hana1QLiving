<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.hana_bank.mapper.UserMapper">
    
    <resultMap id="userResultMap" type="com.example.hana_bank.entity.User">
        <id property="userCi" column="user_ci"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="email" column="email"/>
        <result property="phoneNumber" column="phone_number"/>
        <result property="birthDate" column="birth_date"/>
        <result property="role" column="role"/>
        <result property="status" column="status"/>
        <result property="authType" column="auth_type"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <insert id="insertUser" parameterType="com.example.hana_bank.entity.User">
        INSERT INTO users (
            user_ci, username, password, name, email, phone_number, 
            birth_date, role, status, auth_type, created_at, updated_at
        ) VALUES (
            #{userCi}, #{username}, #{password}, #{name}, #{email}, #{phoneNumber},
            #{birthDate}, #{role}, #{status}, #{authType}, SYSDATE, SYSDATE
        )
    </insert>
    
    <select id="findByUsername" parameterType="string" resultMap="userResultMap">
        SELECT * FROM users WHERE username = #{username}
    </select>
    
    <select id="findByCi" parameterType="string" resultMap="userResultMap">
        SELECT * FROM users WHERE user_ci = #{userCi}
    </select>
    
    <select id="findAll" resultMap="userResultMap">
        SELECT * FROM users ORDER BY created_at DESC
    </select>
    
    <update id="updateUser" parameterType="com.example.hana_bank.entity.User">
        UPDATE users SET
            name = #{name},
            email = #{email},
            phone_number = #{phoneNumber},
            updated_at = SYSDATE,
            status = #{status}
        WHERE user_ci = #{userCi}
    </update>
    
    <delete id="deleteUser" parameterType="string">
        DELETE FROM users WHERE user_ci = #{userCi}
    </delete>
    
    <select id="existsByUsername" parameterType="string" resultType="boolean">
        SELECT CASE WHEN COUNT(*) > 0 THEN 1 ELSE 0 END FROM users WHERE username = #{username}
    </select>
    
    <select id="existsByEmail" parameterType="string" resultType="boolean">
        SELECT CASE WHEN COUNT(*) > 0 THEN 1 ELSE 0 END FROM users WHERE email = #{email}
    </select>
    
    <select id="existsByCi" parameterType="string" resultType="boolean">
        SELECT CASE WHEN COUNT(*) > 0 THEN 1 ELSE 0 END FROM users WHERE user_ci = #{userCi}
    </select>
    
</mapper>
